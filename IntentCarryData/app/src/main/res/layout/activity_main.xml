<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.IntentCarryData.MainActivity">


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/title"
        android:textColor="#FF00FF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtTitle"
        android:layout_below="@+id/txtTitle"
        android:layout_marginBottom="20dp"
        android:text="@string/com_play"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_myplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtTitle"
        android:layout_below="@+id/txtTitle"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:text="@string/my_play" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/result"
        android:textSize="20sp"
        android:layout_below="@+id/imgBtnPaper"
        android:layout_alignRight="@+id/imgViewComPlay"
        android:layout_alignEnd="@+id/imgViewComPlay" />

    <ImageView
        android:id="@+id/imgViewComPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stone"
        android:layout_below="@+id/imgBtnScissors"
        android:layout_alignRight="@+id/txt_com"
        android:layout_alignEnd="@+id/txt_com" />

    <ImageButton
        android:id="@+id/imgBtnScissors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/scissors"
        android:layout_below="@+id/txtTitle"
        android:layout_alignLeft="@+id/txt_myplay"
        android:layout_alignStart="@+id/txt_myplay"
        android:layout_marginTop="28dp" />

    <ImageButton
        android:id="@+id/imgBtnStone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stone"
        android:layout_below="@+id/imgBtnScissors"
        android:layout_alignLeft="@+id/imgBtnScissors"
        android:layout_alignStart="@+id/imgBtnScissors" />

    <ImageButton
        android:id="@+id/imgBtnPaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/paper"
        android:layout_below="@+id/imgBtnStone"
        android:layout_alignLeft="@+id/imgBtnStone"
        android:layout_alignStart="@+id/imgBtnStone"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnShowResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="顯示統計資訊"
        android:layout_below="@+id/txtResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />


</RelativeLayout>
